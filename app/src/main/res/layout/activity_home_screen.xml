<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/card_nutrition.xml -->
<!-- res/layout/card_calorie_counter.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <FrameLayout
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="200dp">
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="false"
                app:indicatorSize="100dp"
                android:progress="50"
                android:rotation="180"
                app:indicatorColor="@color/primary"
                app:trackColor="@color/secondary"
                app:trackCornerRadius="10dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/progressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1640"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/progressTextViewLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/text_grey"
                    android:text="kcal left"
                    android:textSize="12sp"/>
            </LinearLayout>
        </FrameLayout>
        <!-- Carbs Counter -->
        <TextView
            android:id="@+id/carbsCounterTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carbs: 300g" />

        <!-- Carbs Progress Bar -->
        <ProgressBar
            android:id="@+id/carbsProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="30" />

        <!-- Proteins Counter -->
        <TextView
            android:id="@+id/proteinsCounterTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proteins: 120g" />

        <!-- Proteins Progress Bar -->
        <ProgressBar
            android:id="@+id/proteinsProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="100" />

        <!-- Fats Counter -->
        <TextView
            android:id="@+id/fatsCounterTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fats: 80g" />

        <!-- Fats Progress Bar -->
        <ProgressBar
            android:id="@+id/fatsProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="40" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

